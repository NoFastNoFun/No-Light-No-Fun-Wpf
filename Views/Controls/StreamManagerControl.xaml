<UserControl x:Class="No_Fast_No_Fun_Wpf.Views.Controls.StreamManagerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="500">
    <StackPanel Margin="10">
        <TextBlock Text="Gestion des flux DMX" FontWeight="Bold" FontSize="16" Margin="0 0 0 10"/>

        <ListBox ItemsSource="{Binding Streams}" SelectedItem="{Binding SelectedStream}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" Width="150"/>
                        <TextBlock Text=" - " />
                        <TextBlock Text="{Binding Universe}" Width="50"/>
                        <TextBlock Text="{Binding IsActive, StringFormat='Actif : {0}'}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
            <Button Content="Ajouter" Command="{Binding AddStreamCmd}" Width="80" Margin="0 0 10 0"/>
            <Button Content="Supprimer" Command="{Binding RemoveStreamCmd}" Width="80" Margin="0 0 10 0"/>
            <Button Content="Activer / Désactiver" Command="{Binding ToggleStreamCmd}" Width="130"/>
        </StackPanel>
    </StackPanel>
</UserControl>
