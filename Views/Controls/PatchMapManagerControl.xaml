<UserControl x:Class="No_Fast_No_Fun_Wpf.Views.Controls.PatchMapManagerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button Content="Load" Command="{Binding LoadCommand}" Margin="0,0,5,0"/>
            <Button Content="Save" Command="{Binding SaveCommand}" Margin="0,0,5,0"/>
            <Button Content="Add"  Command="{Binding AddCommand}"  Margin="0,0,5,0"/>
            <Button Content="Delete" Command="{Binding DeleteCommand}"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding Entries}"
              SelectedItem="{Binding SelectedEntry, Mode=TwoWay}"
              AutoGenerateColumns="False"
              CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Patch From" Binding="{Binding From, Mode=TwoWay}" Width="*"/>
                <DataGridTextColumn Header="Patch To"   Binding="{Binding To,   Mode=TwoWay}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
