<UserControl x:Class="No_Fast_No_Fun_Wpf.Views.Controls.SystemSettingsPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:No_Fast_No_Fun_Wpf.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="20" VerticalAlignment="Top">
        <TextBlock Text="Port d'écoute" FontWeight="Bold" />
        <TextBox Text="{Binding SelectedPort, UpdateSourceTrigger=PropertyChanged}" Width="100" Margin="0,5,0,10" />

        <TextBlock Text="Univers eHuB à écouter" FontWeight="Bold" />
        <TextBox Text="{Binding SelectedUniverse, UpdateSourceTrigger=PropertyChanged}" Width="100" Margin="0,5,0,10" />

        <Button Content="Appliquer les paramètres"
                Command="{Binding ApplySettingsCommand}"
                Width="200"
                HorizontalAlignment="Left"
                Margin="0,10,0,0"/>
    </StackPanel>
</UserControl>
