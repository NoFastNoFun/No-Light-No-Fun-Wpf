<UserControl x:Class="No_Fast_No_Fun_Wpf.Views.Controls.ConfigEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:No_Fast_No_Fun_Wpf.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="600" d:DesignHeight="400">

    <UserControl.Resources>
        <!-- On récupère le converter depuis App.xaml ou on peut le redéclarer ici -->
        <conv:RangeConverter x:Key="RangeConverter"/>
    </UserControl.Resources>

    <DockPanel Margin="10">

        <!-- Barre d'outils -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Load..." Command="{Binding LoadConfigCommand}" Margin="0,0,5,0"/>
            <Button Content="Save"   Command="{Binding SaveConfigCommand}" Margin="0,0,5,0"/>
            <Button Content="Add"    Command="{Binding AddItemCommand}"/>
        </StackPanel>

        <!-- Grille d'édition -->
        <DataGrid ItemsSource="{Binding ConfigItems}"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              Margin="0,0,0,10">
            <DataGrid.Columns>

                <!-- Colonne Entités : start – end -->
                <DataGridTemplateColumn Header="Entités" Width="2*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource RangeConverter}">
                                        <Binding Path="StartEntityId"/>
                                        <Binding Path="EndEntityId"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Colonne Univers : start – end -->
                <DataGridTemplateColumn Header="Univers" Width="2*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource RangeConverter}">
                                        <Binding Path="StartUniverse"/>
                                        <Binding Path="EndUniverse"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Colonne IP Contrôleur -->
                <DataGridTextColumn Header="Adresse IP" Width="*"
                            Binding="{Binding ControllerIp, Mode=TwoWay}"/>

            </DataGrid.Columns>
        </DataGrid>

        <!-- Aperçu JSON brut -->
        <TextBox Text="{Binding RawJson, Mode=TwoWay}"
             AcceptsReturn="True"
             VerticalScrollBarVisibility="Auto"
             Height="150"/>
    </DockPanel>
</UserControl>
