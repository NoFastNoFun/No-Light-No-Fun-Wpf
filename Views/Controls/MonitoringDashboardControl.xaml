<UserControl x:Class="No_Fast_No_Fun_Wpf.Views.Controls.MonitoringDashboardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="500">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Start"
                    Command="{Binding StartCommand}"
                    Margin="0,0,10,0"/>
            <Button Content="Stop"
                    Command="{Binding StopCommand}"
                    Margin="0,0,10,0"/>
            <Button Content="Clear Log"
                    Command="{Binding ClearLogsCommand}"
                    Margin="0,0,10,0"/>
            <Button Content="Clear Entités"
                    Command="{Binding ClearEntitiesCommand}"/>
        </StackPanel>

        <!-- DataGrid des entités -->
        <DataGrid ItemsSource="{Binding EntityStates}" 
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Height="250"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding EntityId}" Width="*"/>
                <DataGridTextColumn Header="R" Binding="{Binding R}" Width="*"/>
                <DataGridTextColumn Header="G" Binding="{Binding G}" Width="*"/>
                <DataGridTextColumn Header="B" Binding="{Binding B}" Width="*"/>
                <DataGridTextColumn Header="MAJ" Binding="{Binding LastUpdate, StringFormat={}{0:HH:mm:ss.fff}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Log scrolling -->
        <ListBox ItemsSource="{Binding Logs}" Height="150" />
    </DockPanel>
</UserControl>
