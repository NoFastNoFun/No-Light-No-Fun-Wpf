<UserControl x:Class="No_Fast_No_Fun_Wpf.Views.Controls.ReceiverConfigPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
            <TextBlock VerticalAlignment="Center" Text="Port : "/>
            <TextBox Width="80" Text="{Binding Settings.Port, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,5">
            <TextBlock VerticalAlignment="Center" Text="Univers : "/>
            <TextBox Width="80" Text="{Binding Settings.Universe, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <Button Grid.Row="2" Content="Enregistrer" 
            Command="{Binding SaveCommand}" HorizontalAlignment="Left" Width="100"/>
    </Grid>
</UserControl>
